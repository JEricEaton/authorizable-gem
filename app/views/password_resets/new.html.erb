<div class="new_password_reset_container">
  <h1>Reset Account Password</h1>

  <%= form_tag password_resets_path, method: :post do %>
    <div class="input">
      <%= label_tag :email, 'Enter the email address you use with your account' %>
      <%= text_field_tag :email, params[:email], autofocus: 'autofocus', placeholder: 'Your email address' %>
    </div>
    
    <div class="submit">
      <%= submit_tag 'Send me password reset instructions', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
