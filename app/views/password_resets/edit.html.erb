<div class="password_reset_container">
  <h1>Reset Your Password</h1>

  <p>Type in a new password you want to use to sign in.</p>

  <%= form_for @user, { :url => password_reset_path(params[:id]) } do |f| %>
    <%= render 'form_errors', record: @user %>
  
    <div class="input">  
      <%= f.label :password, 'New password' %>  
      <%= f.password_field :password, { autofocus: 'autofocus' } %>  
    </div>
    
    <div class="input">
      <%= f.label :password_confirmation, 'New password again' %>  
      <%= f.password_field :password_confirmation %>
    </div>  
    
    <div class="submit">
      <%= f.submit "Save my new password", class: 'btn btn-primary' %>
    </div>  
  <% end %>
</div>