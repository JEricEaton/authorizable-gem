<div class="sign_in_container">
  <%= form_for :session, url: sessions_path do |f| %>
    <div class="input">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: 'autofocus' %>
    </div>

    <div class="input">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Keep me signed in on this computer' %>
    </div>

    <div class="submit">
      <%= submit_tag "Sign in", class: 'btn btn-primary' %>
      <%= f.hidden_field :r, value: return_to_path %>
    </div>
    
    <div class="help">
      Help: <%= link_to 'I forgot my password', new_password_reset_path %>
    </div>
  <% end %>
</div>

